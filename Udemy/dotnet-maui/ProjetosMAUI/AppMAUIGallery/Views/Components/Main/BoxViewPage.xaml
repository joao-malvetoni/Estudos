<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Components.Main.BoxViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BoxViewPage">
    <VerticalStackLayout Padding="10">
        <BoxView HeightRequest="3" Color="Black" />
        <BoxView
            HeightRequest="100"
            WidthRequest="100"
            Color="Blue" />
        <BoxView
            HeightRequest="150"
            WidthRequest="200"
            Color="Green" />
        <BoxView
            CornerRadius="50"
            HeightRequest="100"
            WidthRequest="100"
            Color="red" />
    </VerticalStackLayout>
</ContentPage>